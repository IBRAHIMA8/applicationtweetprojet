<%= form_with(model: @tweet, local: true, url: choose_new_or_edit) do |form| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">

      <h2>Il y a  <%= @tweet.errors.count %> quelques erreurs.</h2>
      <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tweet_content">
    <%= form.text_field :content %>
  </div>
  <br>
  <%= form.submit "Poster le nouveau Tweet" %>
<% end %>
<br><br><br>
<%= link_to "Revenir à l'écran de la liste des tweets", tweets_path %>
